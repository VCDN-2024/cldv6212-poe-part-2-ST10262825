@model IEnumerable<ABC_Retailer.Models.Customer>

<h1>Customers</h1>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Customer_Name @customer.Customer_Surname</td>
                <td>@customer.email</td>
                <td>@customer.phoneNumber</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@customer.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Customer?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
